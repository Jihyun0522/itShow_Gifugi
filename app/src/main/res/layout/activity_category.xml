<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category">

    <!--배경이 될 Layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/under_line">

        <include layout="@layout/top_menu"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/under_line">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="CATEGORY"
                    android:textColor="@color/uncheck"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/c_festival"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="35dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:background="@drawable/on_festival" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="FESTIVAL"
                        android:textColor="#000"
                        android:textSize="11dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c_sightseeing"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/on_sightseeing"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="EXPERIENCE"
                        android:textColor="#000"
                        android:textSize="11dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:orientation="horizontal"
                android:background="@drawable/under_line">

                <LinearLayout
                    android:id="@+id/c_stay"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/on_stay"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="STAY"
                        android:textColor="#000"
                        android:textSize="11dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c_food"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/on_food"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="FOOD"
                        android:textColor="#000"
                        android:textSize="11dp"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginTop="250dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="RECOMMEND"
                    android:textColor="@color/uncheck"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginTop="270dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <!-- 사진 레이아웃을 따로 만드는 것을 고민 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/category_card_1"
                            android:layout_width="140dp"
                            android:layout_height="190dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/oval"
                                android:src="@drawable/nakara" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/category_text"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="FESTIVAL"
                                    android:textColor="@color/main"
                                    android:textSize="8dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/category_text"
                                    android:layout_margin="2dp"
                                    android:text="나가라강 불꽃놀이 축제"
                                    android:textColor="@color/tag"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/category_card_2"
                            android:layout_width="140dp"
                            android:layout_height="190dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/oval"
                                android:src="@drawable/gero" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/category_text2"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="EXPERIENCE"
                                    android:textColor="@color/main"
                                    android:textSize="8dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/category_text2"
                                    android:layout_margin="2dp"
                                    android:text="게로 온천"
                                    android:textColor="@color/tag"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/category_card_3"
                            android:layout_width="140dp"
                            android:layout_height="190dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/oval"
                                android:src="@drawable/kawaraya" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/category_text3"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="FOOD"
                                    android:textColor="@color/main"
                                    android:textSize="8dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/category_text3"
                                    android:layout_margin="2dp"
                                    android:text="가와라야"
                                    android:textColor="@color/tag"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/category_card_4"
                            android:layout_width="140dp"
                            android:layout_height="190dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/oval"
                                android:src="@drawable/sample" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/category_text4"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="EXPERIENCE"
                                    android:textColor="@color/main"
                                    android:textSize="8dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/category_text4"
                                    android:layout_margin="2dp"
                                    android:text="음식샘플 만들기"
                                    android:textColor="@color/tag"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <!--배경이 될 Layout-->

    <!--드로어 화면이 될 Layout-->
    <include layout="@layout/activity_drawer"/>
    <!--드로어 화면이 될 Layout-->

</android.support.v4.widget.DrawerLayout>