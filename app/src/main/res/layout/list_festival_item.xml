<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uncheck"/>

    <ImageView
        android:id="@+id/festival_list_image"
        android:layout_width="160dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/festival_list_keep"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="8dp"
        android:background="@drawable/keep"/>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180dp">

        <TextView
            android:id="@+id/festival_list_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:textColor="@color/uncheck_dark"
            android:text="축제"/>

        <TextView
            android:id="@+id/festival_list_area"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="15dp"
            android:textColor="@color/uncheck"
            android:text="지역"/>

    </LinearLayout>

    <TextView
        android:id="@+id/festival_list_season"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:text="夏"
        android:textColor="@color/uncheck"
        android:textSize="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/uncheck"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>